package com.javaInterviewPractice;

public class Palidrom {
	public static void main(String[] args) {
		
	int reminder;
	int sum=0;
	int number = 2442 ;
	int tempororyNumber=number;
	while (number>0) {
		reminder=number%10;
		sum=(sum*10)+reminder;
		number=number/10;	
	}
	if (tempororyNumber==sum) {
		System.out.println(tempororyNumber+ " this is palidrom");
	}
	else {
		System.out.println(tempororyNumber+ " this is not palidrom");
	}
	}

}
